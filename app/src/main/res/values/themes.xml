<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMovies" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/selected_element</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textview_line_height</item>
        <item name="android:layout_margin">@dimen/textview_line_margin</item>
        <item name="android:background">@color/teal_900</item>
    </style>

    <style name="text_movie_info">
        <item name="android:layout_marginStart">@dimen/movie_info_margin_start</item>
        <item name="android:textColor">@color/teal_900</item>
    </style>

</resources>